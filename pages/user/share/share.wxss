/* pages/user/share/share.wxss */

.pageTitle {
    width: 100%;
    height: 100rpx;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    color: #fff;
    background-color: #74c26c;
    padding: 10px;
    box-sizing: border-box;
}

.account_card {
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    background-color: #74c26c;
    padding: 12px 10px;
    margin-bottom: 10px;
    font-size: 14px;
}

.account_card_profile {
    margin-top: -2px;
    margin-right: 10px;
    width: 50px;
    height: 50px;
    border-radius: 50px;
    overflow: hidden;
}

.account_card_name_text {
    color: #fff;
}

.account_card_profile image {
    display: block;
    width: 100%;
    border-radius: 100%;
}

.account_card_info {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    overflow: hidden;
}

.account_card_name {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.account_card_level, .account_card_phone {
    margin-top: 3px;
    color: #fff;
}

.account_card_name_text {
    color: #fff;
}

.account_card_profile image {
    display: block;
    width: 100%;
    border-radius: 100%;
}

.img {
    width: 300px;
    height: 300px;
    margin: 20px 0px;
}

.btn {
    background: #3884ff;
    color: #fff;
    height: 40px;
    margin: 0 10px;
    font-size: 14px;
    line-height: 40px;
}

.imgContent {
    display: flex;
    justify-content: center;
    align-items: Center;
    height:400px;
}
