.pageTitle {
    width: 100%;
    height: 100rpx;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    color: #fff;
    background-color: #74c26c;
    padding: 10px;
    box-sizing: border-box;
}

.table {
    border: 1 solid darkgray;
    width: 100%;
}

.tr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 3rem;
    align-items: center;
}

.td {
    width: 20%;
    justify-content: center;
    display: flex;
    text-align: center;
    border-right: 2px solid #ddd;
    border-bottom:2px solid #ddd;
    height: 100%;
    font-size: 12px;
}

.td-1 {
    width: 30%;
    display: flex;
    border-right: 2px solid #ddd;
    border-bottom:2px solid #ddd;
    justify-content: center;
    height: 100%;
    align-items: center;
    font-size: 12px;
}

.td-2 {
    width: 30%;
    display: flex;
    border-right: 2px solid #ddd;
    border-bottom:2px solid #ddd;
    justify-content: center;
    height: 100%;
    align-items: center;
    font-size: 12px;
}

.td-3 {
    width: 39%;
    display: flex;
    border-right: 2px solid #ddd;
    justify-content: center;
    border-bottom: 2px solid #ddd;
    height: 100%;
    align-items: center;
    font-size: 12px;
}

.th {
    width: 30%;
    justify-content: center;
    color: #333;
    display: flex;
    height: 3rem;
    align-items: center;
    border-right: 2px solid #ddd;
    border-bottom: 2px solid #ddd;
    font-size: 14px;
}

.th-2 {
    width: 30%;
    justify-content: center;
    border-bottom: 2px solid #ddd;
    color: #333;
