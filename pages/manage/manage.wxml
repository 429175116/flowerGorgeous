<view>
    <view class="uk-thumbnail uk-thumbnail-mini uk-margin-small-top performance" bindtap='goPerformance'>
        <view class="uk-thumbnail-name">
            销售业绩
        </view>
        <view class="uk-thumbnail-caption">
            <view>
                <text class="button">查看</text>
                <image src="/img/pk_jt.png"></image>
            </view>
        </view>
    </view>
    <view class="uk-thumbnail uk-thumbnail-mini uk-margin-small-top balance" bindtap='goBalance'>
        <view class="uk-thumbnail-name">
            余额
        </view>
        <view class="uk-thumbnail-caption">
            <view>
                <text class="button">查看</text>
                <image src="/img/pk_jt.png"></image>
            </view>
        </view>
    </view>
    <view class="uk-thumbnail uk-thumbnail-mini uk-margin-small-top orderManage" bindtap='goAllOrder'>
        <view class="uk-thumbnail-name">
            订单管理
        </view>
        <view class="uk-thumbnail-caption">
            <view>
                <text class="button">查看</text>
                <image src="/img/pk_jt.png"></image>
            </view>
        </view>
    </view>
    <view class="uk-thumbnail uk-thumbnail-mini uk-margin-small-top orderReview" bindtap='goStayOrder'>
        <view class="uk-thumbnail-name">
            待审核订单({{orderListLength}})
        </view>
        <view class="uk-thumbnail-caption">
            <view>
                <text class="button">查看</text>
                <image src="/img/pk_jt.png"></image>
            </view>
        </view>
    </view>
    <view class="uk-thumbnail uk-thumbnail-mini uk-margin-small-top myProxy" bindtap='goMyProxy'>
        <view class="uk-thumbnail-name">
            我的代理
        </view>
        <view class="uk-thumbnail-caption">
            <view>
                <text class="button">查看</text>
                <image src="/img/pk_jt.png"></image>
            </view>
        </view>
    </view>
    <view class="uk-thumbnail uk-thumbnail-mini uk-margin-small-top applyProxy" bindtap='goConfirmProxy'>
        <view class="uk-thumbnail-name">
            待确认代理({{confirmAgentdLength}})
        </view>
        <view class="uk-thumbnail-caption">
            <view>
                <text class="button">查看</text>
                <image src="/img/pk_jt.png"></image>
            </view>
        </view>
    </view>
    <button class="uk-thumbnail uk-thumbnail-mini uk-margin-small-top service" open-type="contact" session-from="weapp">
        <view class="uk-thumbnail-name">
            微信客服
        </view>
        <view class="uk-thumbnail-caption">
            <view class="button serviceButton">联系客服</view>
        </view>
    </button>
</view>
