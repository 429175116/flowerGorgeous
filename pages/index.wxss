/* index.wxss */

.main {
    padding-bottom: 110rpx;
}

.header {
    height: 200rpx;
    width: 100%;
    background: -webkit-gradient(linear, 0 0, 0 bottom, from(#0a96cb), to(rgba(10, 180, 203, 0.5)));
    position: relative;
}
.search {
    width: 80%;
    height: 80rpx;
    background: #fff;
    border-radius: 20rpx;
    position: absolute;
    left: 10%;
    top: 40rpx;
    z-index: 1000;
    overflow: hidden;
}

.search button {
    float: right;
    width: 30%;
    border: 0;
    height: 80rpx;
    border-radius: 20rpx;
    margin-right: -2rpx;
    background: #fff;
    font-size: 26rpx;
    line-height: 80rpx;
}

.search input {
    width: 60%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    margin-left: 5%;
    float: left;
}

#clouds2 {
    position: relative;
    z-index: 2;
}

.cloud1, .cloud2, .cloud3 {
    opacity: 0.5;
}

.cloud1 {
    width: 150rpx;
    height: 40rpx;
    background: #fff;
    position: absolute;
    top: 80rpx;
    border-radius: 200rpx;
}

.cloud1:after {
    content: '';
    position: absolute;
    background: #fff;
    width: 60rpx;
    height: 60rpx;
    top: -20rpx;
    left: 20rpx;
    border-radius: 200rpx;
}

.cloud1:before {
    content: '';
    position: absolute;
    background: #fff;
    width: 80rpx;
    height: 80rpx;
    top: -40rpx;
    right: 10rpx;
    border-radius: 200rpx;
}

.cloud2 {
    width: 100rpx;
    height: 40rpx;
    background: #fff;
    position: absolute;
    top: 140rpx;
    left: 300rpx;
    border-radius: 200rpx;
}

.cloud2:after {
    content: '';
    position: absolute;
    background: #fff;
    width: 40rpx;
    height: 40rpx;
    top: -10rpx;
    left: 20rpx;
    border-radius: 200rpx;
}

.cloud2:before {
    content: '';
    position: absolute;
    background: #fff;
    width: 50rpx;
    height: 50rpx;
    top: -15rpx;
    right: 10rpx;
    border-radius: 200rpx;
}

.cloud3 {
    width: 150rpx;
    height: 40rpx;
    background: #fff;
    position: absolute;
    top: 90rpx;
    right: 10rpx;
    border-radius: 200rpx;
}

.cloud3:after {
    content: '';
    position: absolute;
    background: #fff;
    width: 60rpx;
    height: 60rpx;
    top: -20rpx;
    left: 20rpx;
    border-radius: 200rpx;
}

.cloud3:before {
    content: '';
    position: absolute;
    background: #fff;
    width: 80rpx;
    height: 80rpx;
    top: -40rpx;
    right: 10rpx;
    border-radius: 200rpx;
}

.main {
    width: 100%;
}

.select {
    width: 100%;
    height: 80rpx;
    background: #fff;
    font-size: 26rpx;
    border-bottom: #e2e2e2 1rpx solid;
    position: relative;
}

.select .item {
    width: 33.3%;
    float: left;
    height: 80rpx;
    text-align: center;
}

.select .item .cate {
    line-height: 80rpx;
    float: left;
    margin-left: 20%;
}

.select .item image {
    width: 30rpx;
    height: 30rpx;
    float: left;
    margin-left: 20rpx;
    margin-top: 25rpx;
}

.catelist {
    position: absolute;
    top: 82rpx;
    left: 0rpx;
    width: 100%;
    height: auto;
    overflow: hidden;
    z-index: 1000;
    background: #fff;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #e2e2e2;
}

.catelist text {
    color: #000;
    font-size: 24rpx;
    border: 1rpx solid #f3f3f3;
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
    float: left;
    margin-left: 20rpx;
    margin-top: 10rpx;
}

.orderlist {
    position: absolute;
    width: 33.3%;
    right: 0.1%;
    top: 82rpx;
    text-align: center;
    background: #fff;
    padding-bottom: 20rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid #e2e2e2;
}

.orderlist view {
    border-bottom: 1rpx solid #f2f2f2;
    margin-top: 20rpx;
}

.xuanzhong {
    border: 1px solid #0a96cb;
    color: #0a96cb;
}

.search_prolist.cols_2 {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
}

.search_prolist.cols_2 .search_prolist_item:nth-child(n) {
    margin-right: 5px;
}

.search_prolist.cols_2 .search_prolist_item {
    position: relative;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    -webkit-flex-basis: 48%;
    flex-basis: 48%;
    max-width: 49.4%;
    background-color: #fff;
    margin-bottom: 5px;
    overflow: hidden;
}

.search_prolist.cols_2 .search_prolist_cover {
    position: relative;
    height: 0;
    overflow: hidden;
    padding-top: 100%;
}

.search_prolist .search_prolist_cover {
    background: #f2f2f7;
    background-size: 75px auto;
}

.search_prolist.cols_2 .search_prolist_cover image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

image {
    border: 0 none;
    vertical-align: top;
}

.search_prolist.cols_2 .search_prolist_info {
    padding-bottom: 10px;
}

.search_prolist .search_prolist_info {
    box-sizing: border-box;
    padding: 0 10px;
    overflow: hidden;
    line-height: 1;
}

.search_prolist.type_onetitle .search_prolist_title.search_prolist_title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    height: 19px;
    display: block;
}

.search_prolist .search_prolist_title[data-line="2"] {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    height: 38px;
}

.search_prolist .search_prolist_title {
    word-break: break-all;
    margin-top: 8px;
    color: #333;
    line-height: 1.36;
}

.search_prolist.cols_2 .search_prolist_price {
    display: inline-block;
}

.search_prolist.cols_2 .search_prolist_price {
    margin-top: 8px;
    height: 16px;
}

.search_prolist .search_prolist_price {
    color: #e93b3d;
    min-width: 40px;
}

.search_prolist.cols_2 .search_prolist_price strong {
    font-size: 10px;
}

.search_prolist .search_prolist_price strong {
    font-size: 12px;
    font-weight: 400;
}

.search_prolist.cols_2 .search_prolist_line {
    display: inline-block;
    margin-left: 2px;
    height: auto;
}

.search_prolist.cols_2 .search_prolist_line {
    height: 20px;
}

.search_prolist .search_prolist_line {
    white-space: nowrap;
}

.price_fresh, .price_plus, .price_sams, .search_prolist .search_prolist_line,
.search_prolist .search_prolist_lnk, .search_prolist .search_prolist_price,
.search_prolist_belt_price i {
    font-family: arial;
}

.search_prolist.cols_2 .search_prolist_other {
    margin-top: 8px;
    float: left;
    min-width: 100%;
    margin-right: -35px;
}

.search_prolist .search_prolist_other {
    font-size: 12px;
}

.search_prolist .search_prolist_comment, .search_prolist .search_prolist_rate {
    font-size: 12px;
    color: #999;
}

.search_prolist.cols_2 .search_prolist_ad {
    float: right;
    margin: 7px 0 2px;
}

.search_prolist .search_prolist_ad {
    padding: 0 2px;
    height: 13px;
    line-height: 13px;
    font-size: 10px;
    text-align: center;
    color: #fff;
    border-radius: 1px;
    background-color: #ccc;
}
.footers{
    width: 100%;
    height: 60px;
    text-align: center;
    font-size: 10px;
    color:#ccc;
}
